<!DOCTYPE html>
<html>
  <head>
    <title>MamaJoes</title>
	<h2><%=link_to "MAMA JOES", root_path, class: "navbar-brand"%></h2>
    <%= csrf_meta_tags %>
	<% if user_signed_in? %>
		<li><%= link_to "Log Out", destroy_user_session_path, method: :delete, data: { confirm: "Do you want to log out?" } %></li>
		<li><%= link_to 'Edit User Info', infos_path %></li>
		<li><%= link_to 'My Orders', orders_path %></li>
	<% else %>
		<li><%= link_to "Log In", new_user_session_path %> </li>
		<li><%= link_to "Sing Up", new_user_registration_path %></li>
	<% end %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
